<UserControl x:Class="WpfApp1.Components.Buttons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Components"
             xmlns:vm="clr-namespace:WpfApp1.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance vm:MainWindowViewModel}">
    <UniformGrid Rows="2" Columns="2">
        <Button Content="PUSH" Command="{Binding PushCommand}"/>
        <Button Content="RAND" Command="{Binding RandCommand}" CommandParameter="{Binding Model}" Style="{StaticResource StyleGreen}"/>
        <Button Content="POP" Command="{Binding PopCommand}"/>
        <Button Content="CLEAR" Command="{Binding ClearCommand}"/>
    </UniformGrid>
</UserControl>
